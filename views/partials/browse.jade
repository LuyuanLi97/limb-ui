    .col-xs-12.col-sm-9
        hr            
        .col-xs-6.col-sm-6.col-md-4(ng-repeat='user in users | filter : type | filter : search')
            .tile
                a(href='#')
                    h3.tile-title {{user.name}}
                br
                p {{user.age}} years old.
                span.label.label-info user

        .col-xs-6.col-sm-6.col-md-4(ng-repeat='leaf in leaves | filter : type | filter : search')
            .tile
                a(href='#')
                    h3.tile-title {{leaf.topic}}
                br
                span.label.label-success leaf

        .col-xs-6.col-sm-6.col-md-4(ng-repeat='document in documents | filter : type | filter : search')
            .tile
                a(href='#')
                    h3.tile-title {{document.documentName}}
                br
                span.label.label-warning document

        // 页面导航栏
        .col-xs-12.col-sm-9.col-md-9
            ul.pagination
                li.previous
                    a.fui-arrow-left(href='#fakelink')
                li.active
                    a(href='#fakelink') 1
                li
                    a(href='#fakelink') 2
                li
                    a(href='#fakelink') 3
                li
                    a(href='#fakelink') 4
                li
                    a(href='#fakelink') 5
                li.next
                    a.fui-arrow-right(href='#fakelink')
