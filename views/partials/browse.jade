.container
    // side bar
    .col-xs-6.col-sm-3
        br
        ul#nav-tabs-wrapper.nav.nav-tabs.nav-pills.nav-stacked.well
            li
                a(href='/browse') all
            li
                a(href='/browse/leaf') leaf
            li
                a(href='/browse/document') document
            li
                a(href='/browse/user') user
            li
                a(href='/browse/local') local

