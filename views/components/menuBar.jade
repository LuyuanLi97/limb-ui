#menu.topArea
    nav.navbar.navbar-inverse(role='navigation')
        // Brand and toggle get grouped for better mobile display
        .navbar-header
            .menuToggle.visible-xs(type='button', ng-click='collapseList = !collapseList', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                span.fui-list(ng-hide='collapseList')
                span.fui-cross(ng-show='collapseList')
            a.navbar-brand(href='/') 
                img(src='img/leaf.png')
                | &nbsp; Leaf &nbsp;
            .phoneSearchBar.visible-xs
                form.navbar-form.navbar-left(role='search').show-xs
                    .form-group.has-feedback
                        .input-group
                            input.form-control(type='search', placeholder='搜索', ng-model='search')
                            a.browseIconBg(href='/browse')
                                span.fui-search

        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
            a.menuBrowse(href='/browse') browse
            form.navbar-form.navbar-left(role='search').hidden-xs
                .form-group.has-feedback
                    .input-group
                        input.form-control(type='search', placeholder='Search Leaf', ng-model='search')
                        a.browseIconBg(href='/browse')
                            span.fui-search
            a.menuAbout(href='/about') about
            div(ng-controller='checkSigninCtrl', ng-model='signedin')
                a.menuSignin(href='/signin', ng-hide='signedin')
                    form
                        button(href='/signin') 注册 / 登陆
                ul.nav.navbar-nav.navbar-right(ng-show='signedin')
                    li.dropdown
                        a.dropdown-toggle(href='', data-toggle='dropdown')
                            span.fui-plus
                        ul.dropdown-menu(ng-controller="newLeafCtrl")
                            li
                                a(ng-click="newPublicLeaf()") new public leaf
                            li
                                a(href='/leaf') new private leaf
                    li.dropdown
                        a.dropdown-toggle(href='', data-toggle='dropdown')
                            span
                                img(ng-src='{{userAvatar}}')
                        ul.dropdown-menu
                            li
                                a(href='/myprofile') my profile
                            li
                                a(href='/mymessages') my messages &nbsp;
                                    span.label.label-info 3
                            li.divider
                            li
                                a(href='/settings') settings
                            li
                                a(href='/help') help
                            li
                                a(href='/signout') sign out
