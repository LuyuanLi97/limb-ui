                            .panel.panel-default
                                #headingTwo.panel-heading(role='tab')
                                    h4.panel-title
                                        a.collapsed(data-toggle='collapse', data-parent='#accordion', href='#collapseTwo', aria-expanded='false', aria-controls='collapseTwo') 日期: 2016年11月26日
                                #collapseTwo.panel-collapse.collapse(role='tabpanel', aria-labelledby='headingTwo')
                                    .panel-body file #2
                            .panel.panel-default
                                #headingThree.panel-heading(role='tab')
                                    h4.panel-title
                                        a.collapsed(data-toggle='collapse', data-parent='#accordion', href='#collapseThree', aria-expanded='false', aria-controls='collapseThree') 日期: 2016年12月01日
                                #collapseThree.panel-collapse.collapse(role='tabpanel', aria-labelledby='headingThree')
                                    .panel-body file #3
            .form-group
                .panel.panel-primary
                    .panel-heading
                        h3.panel-title.text-center 计划
                    .panel-body
                        .table-responsive
                            table.table.table-hover
                                thead
                                    tr
                                        th 任务
                                        th 截止时间
                                        th 完成情况
                                tbody
                                    tr
                                        td
                                            button.btn.btn-success(type='button', data-toggle='modal', data-target='#myModal') 第一次课后作业
                                        td 2015年11月11日
                                        td 已完成
                                    tr
                                        td
                                            button.btn(type='button', data-toggle='modal', data-target='#myModal') 实验一
                                        td 2016年12月30日
                                        td 未完成
            .form-group
                .panel.panel-primary
                    .panel-heading
                        h3.panel-title.text-center 记录
                    .panel-body
                        textarea.form-control(rows='10', cols='50', autofocus='', placeholder='在这里写下笔记')
                        .row(style='padding:5px 16px 5px 16px;')
                            input#input-700.file-loading(name='kartik-input-700[]', type='file', multiple='')
                            script.
                                $("#input-700").fileinput({
                                uploadUrl: "http://localhost/file-upload/", // server upload action
                                uploadAsync: true,
                                maxFileCount: 5
                                });
            .form-group
                .panel.panel-primary(style='overflow: auto; height: 360px;')
                    .panel-heading
                        h3.panel-title.text-center 留言
                    .panel-body
                        #qdiscuss
                            textarea#mesg.message.form-control(contenteditable='true')
                            .But
                                span.submit 发表
                        #msgpad.msgCon
