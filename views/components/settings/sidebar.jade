.span2#menu
    ul.nav.nav-pills.nav-stacked
        li.active(ng-click="_profile()")
            a(href='#') Profile
        li(ng-click="_account()")
            a(href='#') Account
        li(ng-click="_email()")
            a(href='#') Email

script(type='text/javascript').
    $('#menu > ul li a').click(function(e) {
        var $this = $(this);
        $this.parent().siblings().removeClass('active').end().addClass('active');
        e.preventDefault();
    });
